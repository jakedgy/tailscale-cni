# Copy this file to secret.yaml and fill in your credentials:
#   cp secret.yaml.example secret.yaml
#
# Create an OAuth client at: https://login.tailscale.com/admin/settings/oauth
# Required scope: devices (write)
# Tag the client with the same tags defined in config.yaml (e.g., tag:k8s-pod)
#
# secret.yaml is gitignored and will not be committed.
apiVersion: v1
kind: Secret
metadata:
  name: tailscale-cni-oauth
  namespace: kube-system
type: Opaque
stringData:
  client-id: "YOUR_OAUTH_CLIENT_ID"
  client-secret: "YOUR_OAUTH_CLIENT_SECRET"
